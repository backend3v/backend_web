# Configuración del Backend
PORT=8080
NODE_ENV=development

# Configuración de MongoDB
MONGO_URI=mongodb://localhost:27017/colection
MONGO_DB_NAME=colection

# Configuración de Email (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_usuario@gmail.com
SMTP_PASSWORD=tu_password

# Configuración de Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configuración de Bito AI
BITO_ACCESS_KEY=tu_access_key
BITO_EMAIL=tu_email@example.com

# Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configuración de Seguridad
SECRET_KEY=tu_secret_key_muy_seguro
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Configuración de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600 